<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_preferences.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Categories"
        android:textSize="18sp"
        android:fontFamily="@font/regular"
        android:textStyle="bold"/>

    <MultiAutoCompleteTextView
        android:id="@+id/categoriesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:hint="Enter categories (comma separated)"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred Locations"
        android:fontFamily="@font/regular"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <MultiAutoCompleteTextView
        android:id="@+id/locationsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:hint="Enter locations (comma separated)"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/regular"
        android:text="Save Preferences"/>
</LinearLayout>