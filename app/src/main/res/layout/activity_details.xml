<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".DetailsActivity">

  <!-- Title Section -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Product Details"
      android:textSize="24sp"
      android:fontFamily="@font/regular"
      android:layout_marginBottom="32dp"
      android:textAlignment="center"
      android:textColor="@android:color/black" />

  <!-- Product Details Grid Section -->
  <GridLayout
      android:id="@+id/detailsContainerGL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:columnCount="2"
      android:rowCount="3"
      android:layout_marginBottom="32dp"
      android:layout_gravity="center">

    <!-- Product Information Rows -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:text="Name"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/productCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/productCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/productLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/productDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/providerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="8dp" />

  </GridLayout>

  <!-- Action Buttons Section -->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginBottom="16dp">

    <Button
        android:id="@+id/OfferExchangeButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="Offer Exchange"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginEnd="16dp" />  <!-- Use the same background color for consistency -->

    <Button
        android:id="@+id/ExitButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="Exit"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginEnd="16dp" />  <!-- Use the same background color for consistency -->


  </LinearLayout>

</LinearLayout>
