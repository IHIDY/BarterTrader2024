<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".ProviderDash">

    <!-- Title -->
    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provider Dashboard"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/postButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/regular"
        android:layout_marginTop="12dp" />

    <!-- Post Used Products Button -->
    <Button
        android:id="@+id/postButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:text="Post Used Products"
        android:backgroundTint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/regular"
        app:layout_constraintTop_toBottomOf="@id/dashboardTitle" />

    <!-- View Posted Products Button -->
    <Button
        android:id="@+id/viewPostProducts"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="View Posted Products"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/postButton"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- View Received Offers Button -->
    <Button
        android:id="@+id/button_received_offers"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="View Your Received Offers"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/viewPostProducts"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Button (Moved to the Bottom) -->
    <Button
        android:id="@+id/pBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="Go to Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
